<ul class="masonry">
  {% for category in categories -%}
  <li>
    <span>{{category}}</span>
    <ul>
      {%- for page in collections.all %}
      {%- if page.data.category === category
            and not page.data.hidden
      %}
      <li><a href="{{page.url}}">{{ page.data.title }}</a></li>
      {%- endif %}
      {%- endfor %}
    </ul>
  </li>
  {%- endfor %}
</ul>
